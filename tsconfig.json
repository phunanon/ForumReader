{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./out",
    "declarationDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
